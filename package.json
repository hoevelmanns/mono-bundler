{
  "name": "mono-bundler",
  "version": "1.43.6",
  "description": "Monorepo bundler based on rollup.js",
  "keywords": [
    "monorepo",
    "bundler"
  ],
  "scripts": {
    "build": "ncc build -m ./src/index.ts -o dist -e @babel/core -e @rollup/plugin-node-resolve -e rollup-plugin-typescript2 -e @rollup/plugin-babel -e rollup",
    "watch": "npm run build -- -w",
    "prepublish": "npm run build"
  },
  "bin": {
    "mono": "dist/index.js"
  },
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "author": "Marcelle HÃ¶velmanns",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/hoevelmanns/mono-bundler.git"
  },
  "typings": "dist/index.d.ts",
  "engines": {
    "node": ">=10.0.0"
  },
  "optionalDependencies": {
    "fsevents": "~2.3"
  },
  "dependencies": {
    "@babel/core": "^7.12.10",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "rollup-plugin-typescript2": "^0.29.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-decorators": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@rollup/pluginutils": "^4.1.0",
    "@types/babel__core": "^7.1.12",
    "@types/folder-hash": "^3.3.0",
    "@types/fs-extra": "^9.0.6",
    "@types/lodash": "^4.14.168",
    "@types/minimist": "^1.2.1",
    "@types/node": "^14.14.21",
    "@vercel/ncc": "^0.27.0",
    "boxen": "^5.0.0",
    "chalk": "^4.1.0",
    "esm-config": "^1.1.0",
    "fast-glob": "^3.2.4",
    "folder-hash": "^4.0.0",
    "fs-extra": "^9.0.1",
    "listr2": "^3.3.0",
    "lodash": "^4.17.20",
    "log-symbols": "^4.0.0",
    "minimist": "^1.2.5",
    "ora": "^5.3.0",
    "rollup": "^2.36.1",
    "tsyringe": "^4.4.0",
    "typescript": "^4.1.3"
  }
}
